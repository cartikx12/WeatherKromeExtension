{
    "manifest_version": 3,
    "name": "Real-Time Weather Extension",
    "description": "Provides real-time weather information based on your location.",
    "version": "1.0",
    "permissions": [
        "geolocation",
        "activeTab", 
        "storage"
    ],
    "action": 
    {
      "default_popup": "popup.html",
      "default_icon": 
      {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
  
    "icons": 
    {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }  
}